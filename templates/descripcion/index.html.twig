{% extends 'base.html.twig' %}

{% block title %}Descripciones{% endblock %}

{% block body %}
<div class="container">
  <div class="col-md-8 offset-md-2">
    <h1>Descripciones</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Descripcion</th>
                <th class="action-col">Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for descripcion in descripcions %}
            <tr>
                <td>{{ descripcion.id }}</td>
                <td>{{ descripcion.descripcion }}</td>
                <td>
                    <a href="{{ path('descripcion_show', {'id': descripcion.id}) }}" class="btn btn-primary">Ver<i class="material-icons align-bottom">remove_red_eye</i></a>
                    <a href="{{ path('descripcion_edit', {'id': descripcion.id}) }}" class='btn btn-info'>Editar<i class="material-icons align-bottom">edit</i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No hay descripciones cargadas</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('descripcion_new') }}" class='btn btn-success'>Agregar descripcion<i class="material-icons align-bottom">add</i></a>
  </div>
</div>
{% endblock %}
