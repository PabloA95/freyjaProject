{% extends 'base.html.twig' %}

{% block title %}Producto index{% endblock %}

{% block stylesheets %}
<!-- <script src="http://code.jquery.com/jquery-1.11.3.min.js"></script> -->
<!-- <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css"> -->
<link rel="stylesheet" href="{{ asset('dataTables.css', 'css') }}">
<link rel="stylesheet" href="{{ asset('dataTables.min.css', 'css') }}">
<script src="{{ asset('dataTables.js', 'js') }}"></script>

<script type="text/javascript">
    $(document).ready(function() {
        $('#productos').DataTable({
            "lengthChange" : false,
            "paging" : true,
            "pageLength" : 5
        });
    } );
</script>
{% endblock %}

{% block body %}
    <h1>Producto index</h1>
    <a href="{{ path('exportar_pdf') }}" class='btn btn-info'>Exportar a PDF<i class="material-icons align-bottom">file_download</i></a>
    <table class="table table-striped" id="productos">
        <thead>
            <tr>
                <!-- <th>Id</th> -->
                <th>Codigo</th>
                <th>Marca</th>
                <th>Descripcion</th>
                <th>PrecioEfectivo</th>
                <th>PrecioTarjeta</th>
                <th>PrecioCompra</th>
                <!-- <th>Estado</th>
                <th>Stock</th>
                <th>CodigoBarra</th> -->
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr>
                <!-- <td>{{ producto.id }}</td> -->
                <td>{{ producto.codigo }}</td>
                <td>{{ producto.marca.descripcion }}</td>
                <td>{{ producto.descripcion.descripcion }}</td>
                <td>{{ producto.precioEfectivo }}</td>
                <td>{{ producto.precioTarjeta }}</td>
                <td>{{ producto.precioCompra }}</td>
                <!-- <td>{{ producto.estado ? 'Yes' : 'No' }}</td>
                <td>{{ producto.stock }}</td>
                <td>{{ producto.codigoBarra }}</td> -->
                <td>
                    <a href="{{ path('producto_show', {'id': producto.id}) }}" class="btn btn-primary">Ver<i class="material-icons align-bottom">remove_red_eye</i>
                  	</a>
                    <a href="{{ path('producto_edit', {'id': producto.id}) }}" class='btn btn-info'>Editar<i class="material-icons align-bottom">edit</i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">No hay productos cargados</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('producto_new') }}" class='btn btn-success'>Agregar Producto<i class="material-icons align-bottom">add</i></a>
{% endblock %}
