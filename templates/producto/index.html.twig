{% extends 'base.html.twig' %}

{% block title %}Producto index{% endblock %}

{% block body %}
    <h1>Producto index</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <!-- <th>Id</th> -->
                <th>Codigo</th>
                <th>PrecioEfectivo</th>
                <th>PrecioTarjeta</th>
                <th>PrecioCompra</th>
                <th>Estado</th>
                <th>Stock</th>
                <th>CodigoBarra</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for producto in productos %}
            <tr>
                <!-- <td>{{ producto.id }}</td> -->
                <td>{{ producto.codigo }}</td>
                <td>{{ producto.precioEfectivo }}</td>
                <td>{{ producto.precioTarjeta }}</td>
                <td>{{ producto.precioCompra }}</td>
                <td>{{ producto.estado ? 'Yes' : 'No' }}</td>
                <td>{{ producto.stock }}</td>
                <td>{{ producto.codigoBarra }}</td>
                <td>
                    <a href="{{ path('producto_show', {'id': producto.id}) }}">show</a>
                    <a href="{{ path('producto_edit', {'id': producto.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('producto_new') }}">Create new</a>
{% endblock %}
