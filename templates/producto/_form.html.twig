<style type="text/css">
	.formularios-agregar{
		width: 100%;
		align-items: center;
		align-content: center;
		text-align: center;
		align-self: center;

	}
	.formulario{
		margin: auto;
	}
	.span-group{
		width: 8.2em !important;
		opacity: 1 !important;
	}

	#agregar-marca, #agregar-descripcion{
		position: fixed;
		top: 20%;
