<script type="text/javascript">

function Esconder(id) {
document.getElementById(id).style.visibility="hidden";
}
function Mostrar(id) {
document.getElementById(id).style.visibility="visible";
}
</script>
<div id='agregar-marca'  class="formularios-agregar">
  <h1 class="titulo">Agregar Marca</h1>
  {{ form_start(formMarca)}}
  <div class="input-group input-group-lg mb-5">
    <div class="input-group-prepend m-auto">
      <span class="input-group-text span-group" style="background-color:#FFE4E1" id="basic-addon3" required >Marca</span>
      {{ form_widget(formMarca, {'attr':{'class':'form-control', 'placeholder':'Descripcion'}})}}
    </div>
  </div>
  <div class="col-md-4 m-auto">
    <button onclick="Esconder('agregar-marca')" type="reset" class="btn btn-lg btn-info" style="float: left;">Cancelar</button>
    <button type="submit" class="btn btn-lg " style="float: right;background-color:#F8BBD0">Guardar</button>
  </div>
  {{ form_end(formMarca, {'attr':{'class':'d-flex flex-row justify-content-center align-items-center'}})}}
</div>

